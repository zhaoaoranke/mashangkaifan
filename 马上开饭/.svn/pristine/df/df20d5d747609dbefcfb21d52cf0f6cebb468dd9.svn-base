<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="@drawable/selector_recipe_category_group_bg"
     >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#30444444"
            android:layout_alignParentBottom="true"
            />
        <ImageView 
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_recipe_category_default"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView 
            android:id="@+id/item_recipe_category_group_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜系"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/img"
            android:textSize="16sp"
            />
        <ImageView 
            android:id="@+id/img_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_category_item_arrow_down"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
             android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    
</LinearLayout>