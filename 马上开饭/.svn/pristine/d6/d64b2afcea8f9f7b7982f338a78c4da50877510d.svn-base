<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top|left|center"
    android:orientation="horizontal"
    android:paddingBottom="7.5dip"
    android:paddingLeft="20.0dip"
    android:paddingRight="20.0dip"
    android:paddingTop="6.0dip" 
    android:background="@drawable/selector_recipe_step_item_bg">

    <TextView
        android:id="@+id/recipe_detail_step_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="12"
        android:textStyle="bold"
        android:textColor="#ff323232"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_weight="1.0" >

        <TextView
            android:id="@+id/recipe_detail_step_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="10.0dip"
            android:textColor="#ff323232"
            android:textSize="16sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/recipe_detail_step_image_layout"
        android:layout_width="90.0dip"
        android:layout_height="90.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="2.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/recipe_detail_step_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:background="#999999" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mask_200" />
    </FrameLayout>

</LinearLayout>