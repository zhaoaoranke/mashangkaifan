<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/title_bg" >

        <TextView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_back"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="菜谱分类"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/title_serch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/menu_sarch" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#22444444">
        <com.zhuoxin.meihaoshiguang.view.CategoryView
            android:id="@+id/categroryView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
		<ImageView 
		    android:id="@+id/loadingView"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    />
		<TextView 
		    android:id="@+id/failedText"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="信号不小心被吃掉了\n\n点击我重试"
		    android:textColor="#444444"
		    android:layout_marginTop="20dp"
		    android:gravity="center_horizontal"
		    android:layout_centerInParent="true"
		    android:visibility="gone"
		    />        
    </RelativeLayout>

</LinearLayout>