<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_search_item_bg"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="15.0dip" >

    <TextView
        android:id="@+id/item_search_type"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="菜谱"
        android:textColor="#b6b6b6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_search_content"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15.0dip"
        android:layout_toRightOf="@id/item_search_type"
        android:gravity="center"
        android:text="红烧肉"
        android:textColor="#666666"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/item_search_content"
        android:layout_marginTop="5.0dip"
        android:background="#C2C2C2" />

</RelativeLayout>